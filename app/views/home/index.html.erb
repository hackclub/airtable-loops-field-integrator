<% content_for :title, "Home" %>

<style>
  body {
    font-family: monospace;
    max-width: 1400px;
    margin: 0 auto;
    padding: 20px;
    line-height: 1.6;
    background-color: #fff;
    color: #000;
  }
  h1, h2 {
    margin-top: 0;
    margin-bottom: 10px;
  }
  .nav {
    margin-bottom: 20px;
    padding-bottom: 10px;
    border-bottom: 1px solid #ccc;
  }
  .nav a {
    color: #000;
    text-decoration: none;
    margin-right: 15px;
  }
  .nav a:hover {
    text-decoration: underline;
  }
  .stats {
    margin-bottom: 20px;
    padding: 10px;
    border: 1px solid #ccc;
  }
  .stats-line {
    margin: 5px 0;
  }
  .section {
    margin-bottom: 30px;
  }
  .section-title {
    font-weight: bold;
    margin-bottom: 10px;
    border-bottom: 1px solid #ccc;
    padding-bottom: 5px;
  }
  table {
    width: 100%;
    border-collapse: collapse;
    border: 1px solid #ccc;
  }
  th, td {
    padding: 8px;
    text-align: left;
    border-bottom: 1px solid #ccc;
  }
  th {
    background-color: #f0f0f0;
    font-weight: bold;
  }
  tr:hover {
    background-color: #f9f9f9;
  }
  .status-badge {
    padding: 2px 6px;
    border: 1px solid #000;
  }
  .status-active {
    background-color: #fff;
  }
  .status-error {
    background-color: #fff;
    border-color: #f00;
    color: #f00;
  }
  .status-none {
    background-color: #f0f0f0;
    color: #666;
  }
  .empty {
    color: #666;
    font-style: italic;
    padding: 20px;
    text-align: center;
  }
  a {
    color: #000;
    text-decoration: underline;
  }
  a:hover {
    background-color: #f0f0f0;
  }
  .actions {
    margin-top: 20px;
    padding-top: 10px;
    border-top: 1px solid #ccc;
  }
  .actions a {
    margin-right: 15px;
  }
  .timestamp {
    font-family: monospace;
    font-size: 0.9em;
    color: #666;
  }
</style>

<div class="nav">
  <%= link_to "Home", root_path, class: (request.path == root_path ? "active" : "") %>
  <%= link_to "Sync Sources", sync_sources_path %>
  <%= link_to "Email Audit Logs", emails_path %>
  <%= link_to "Sidekiq", "/sidekiq" %>
</div>

<h1>Airtable → Loops Sync</h1>

<div class="stats">
  <div class="stats-line">Total Sync Sources: <%= @total_syncs %></div>
  <div class="stats-line">Active: <%= @active_syncs %> | Errors: <%= @error_syncs %></div>
</div>

<div class="actions">
  <%= link_to "Create Sync Source", new_sync_source_path %>
  <%= link_to "View Email Logs", emails_path %>
  <%= link_to "Sidekiq", "/sidekiq" %>
</div>

<% if @total_syncs == 0 %>
  <div class="section">
    <div class="empty">
      No sync sources configured. <%= link_to "Create your first sync source", new_sync_source_path %> to get started.
    </div>
  </div>
<% else %>
  <div class="section">
    <div class="section-title">Recent Sync Activity</div>
    <% if @recent_syncs.any? %>
      <table>
        <thead>
          <tr>
            <th>Time</th>
            <th>Sync Source</th>
            <th>Status</th>
            <th>Failures</th>
            <th>Next Poll</th>
          </tr>
        </thead>
        <tbody>
          <% @recent_syncs.each do |sync| %>
            <tr>
              <td class="timestamp">
                <span data-utc-time="<%= sync.last_successful_poll_at.iso8601 %>">
                  <%= sync.last_successful_poll_at.strftime("%Y-%m-%d %H:%M:%S UTC") %>
                </span>
              </td>
              <td>
                <%= sync.humanized_name %>
                <br>
                <span style="font-size: 0.85em; color: #666;"><%= sync.source_id %></span>
              </td>
              <td>
                <% if sync.consecutive_failures > 0 %>
                  <span class="status-badge status-error">[ERROR]</span>
                <% else %>
                  <span class="status-badge status-active">[ACTIVE]</span>
                <% end %>
              </td>
              <td><%= sync.consecutive_failures %></td>
              <td class="timestamp">
                <% if sync.next_poll_at %>
                  <span data-utc-time="<%= sync.next_poll_at.iso8601 %>">
                    <%= sync.next_poll_at.strftime("%Y-%m-%d %H:%M:%S UTC") %>
                  </span>
                <% else %>
                  <span class="empty">—</span>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <div class="empty">No sync activity yet.</div>
    <% end %>
  </div>

  <% if @error_sync_sources.any? %>
    <div class="section">
      <div class="section-title">Sync Sources with Errors</div>
      <table>
        <thead>
          <tr>
            <th>Sync Source</th>
            <th>Failures</th>
            <th>Last Successful Poll</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @error_sync_sources.each do |sync| %>
            <tr>
              <td>
                <%= sync.humanized_name %>
                <br>
                <span style="font-size: 0.85em; color: #666;"><%= sync.source_id %></span>
              </td>
              <td><%= sync.consecutive_failures %></td>
              <td class="timestamp">
                <% if sync.last_successful_poll_at %>
                  <span data-utc-time="<%= sync.last_successful_poll_at.iso8601 %>">
                    <%= sync.last_successful_poll_at.strftime("%Y-%m-%d %H:%M:%S UTC") %>
                  </span>
                <% else %>
                  <span class="empty">Never</span>
                <% end %>
              </td>
              <td>
                <%= link_to "View", sync_source_path(sync) %> |
                <%= link_to "Edit", edit_sync_source_path(sync) %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>

  <div class="section">
    <div class="section-title">Recent Email Changes</div>
    <% if @recent_emails.any? %>
      <table>
        <thead>
          <tr>
            <th>Email</th>
            <th>Last Activity</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @recent_emails.each do |email| %>
            <% audit = LoopsContactChangeAudit.where(email_normalized: email).order(occurred_at: :desc).first %>
            <tr>
              <td><%= email %></td>
              <td class="timestamp">
                <% if audit %>
                  <span data-utc-time="<%= audit.occurred_at.iso8601 %>">
                    <%= audit.occurred_at.strftime("%Y-%m-%d %H:%M:%S UTC") %>
                  </span>
                <% else %>
                  <span class="empty">—</span>
                <% end %>
              </td>
              <td>
                <%= link_to "View Audit", "/emails/#{ERB::Util.url_encode(email)}" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <div class="empty">No email changes tracked yet.</div>
    <% end %>
  </div>
<% end %>

<script>
  // Convert UTC timestamps to user's local timezone
  document.addEventListener('DOMContentLoaded', function() {
    const timeElements = document.querySelectorAll('[data-utc-time]');
    timeElements.forEach(function(el) {
      const utcTime = el.getAttribute('data-utc-time');
      const utcDate = new Date(utcTime);
      const localTime = utcDate.toLocaleString('en-US', {
        year: 'numeric',
        month: '2-digit',
        day: '2-digit',
        hour: '2-digit',
        minute: '2-digit',
        second: '2-digit',
        hour12: false
      });
      el.textContent = localTime;
    });
  });
</script>


