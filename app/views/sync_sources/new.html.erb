<h1>Create New Sync Source</h1>

<% if @error %>
  <div class="error-explanation">
    <p><%= @error %></p>
  </div>
<% end %>

<% if @sync_source.errors.any? %>
  <div class="error-explanation">
    <h2><%= pluralize(@sync_source.errors.count, "error") %> prohibited this sync source from being saved:</h2>
    <ul>
      <% @sync_source.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @sync_source, url: admin_sync_sources_path, local: true do |form| %>
  <div class="form-group">
    <%= form.label :source_id, "Airtable Base" %>
    <% if @available_bases.any? %>
      <%= form.select :source_id, 
          options_for_select(
            @available_bases.map { |b| [b["name"] || b["id"], b["id"]] },
            @base_id || @sync_source.source_id
          ),
          { prompt: "Select a base..." },
          { required: true } %>
      <div class="help-text">Select an Airtable base to sync</div>
    <% else %>
      <%= form.text_field :source_id, value: @base_id || @sync_source.source_id, placeholder: "Enter base ID", required: true %>
      <div class="help-text">Enter the Airtable base ID</div>
    <% end %>
    <% if @sync_source.errors[:source_id].any? %>
      <div class="error-message"><%= @sync_source.errors[:source_id].first %></div>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label :poll_interval_seconds, "Poll Interval (seconds)" %>
    <%= form.number_field :poll_interval_seconds, value: @sync_source.poll_interval_seconds || 30, min: 1, step: 1 %>
    <div class="help-text">How often to poll this base (in seconds). Default: 30</div>
    <% if @sync_source.errors[:poll_interval_seconds].any? %>
      <div class="error-message"><%= @sync_source.errors[:poll_interval_seconds].first %></div>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label :poll_jitter, "Poll Jitter" %>
    <%= form.number_field :poll_jitter, value: @sync_source.poll_jitter || 0.1, min: 0, max: 1, step: 0.01 %>
    <div class="help-text">Random jitter factor (0.0 to 1.0) to avoid synchronized polling. Default: 0.1</div>
    <% if @sync_source.errors[:poll_jitter].any? %>
      <div class="error-message"><%= @sync_source.errors[:poll_jitter].first %></div>
    <% end %>
  </div>

  <div class="form-actions">
    <%= form.submit "Create Sync Source", class: "btn btn-primary" %>
    <%= link_to "Cancel", admin_sync_sources_path, class: "btn btn-secondary" %>
  </div>
<% end %>

