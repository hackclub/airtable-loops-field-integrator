<% content_for :title, "Edit Profile" %>

<div class="container">
  <h1>Edit Profile</h1>

<% if flash[:notice] %>
  <div class="alert alert-notice"><%= flash[:notice] %></div>
<% end %>

<% if flash[:error] %>
  <div class="alert alert-error"><%= flash[:error] %></div>
<% end %>

<p class="text-muted" style="margin-bottom: 32px; font-size: 16px;">
  Edit any of the below values to update what we have stored for you in Hack Club's email list.
</p>

<%= form_with url: profile_path, method: :patch, local: true do |form| %>
  <div class="form-group form-group-row">
    <div class="form-group-half">
      <%= form.label :firstName, "First Name" %>
      <%= form.text_field :firstName, value: @profile&.dig("firstName") %>
    </div>
    <div class="form-group-half">
      <%= form.label :lastName, "Last Name" %>
      <%= form.text_field :lastName, value: @profile&.dig("lastName") %>
    </div>
  </div>

  <div class="form-group">
    <% current_gender = @profile&.dig("genderSelfReported") %>
    <% standard_genders = %w[male female nonbinary] %>
    <% gender_label = if current_gender.present? && !standard_genders.include?(current_gender.to_s.downcase)
                        "Gender (Current: #{current_gender})"
                      else
                        "Gender"
                      end %>
    <%= form.label :genderSelfReported, gender_label %>
    <%= form.select :genderSelfReported, 
        options_for_select([
          ["", ""],
          ["Male", "male"],
          ["Female", "female"],
          ["Non-binary", "nonbinary"]
        ], current_gender),
        {},
        { class: "form-select" } %>
  </div>

  <div class="form-group">
    <label>Birthday</label>
    <div class="form-group-row">
      <div class="form-group-third">
        <%= form.label :birthdayYear, "Year" %>
        <%= form.text_field :birthdayYear, value: @profile&.dig("birthdayYear"), maxlength: 4, pattern: "[0-9]{4}" %>
      </div>
      <div class="form-group-third">
        <%= form.label :birthdayMonth, "Month" %>
        <%= form.text_field :birthdayMonth, value: @profile&.dig("birthdayMonth"), maxlength: 2, pattern: "[0-9]{1,2}" %>
      </div>
      <div class="form-group-third">
        <%= form.label :birthdayDay, "Day" %>
        <%= form.text_field :birthdayDay, value: @profile&.dig("birthdayDay"), maxlength: 2, pattern: "[0-9]{1,2}" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <label>Mailing Address</label>
    
    <div class="form-group">
      <%= form.label :addressLine1, "Address Line 1" %>
      <%= form.text_field :addressLine1, value: @profile&.dig("addressLine1") %>
    </div>

    <div class="form-group">
      <%= form.label :addressLine2, "Address Line 2" %>
      <%= form.text_field :addressLine2, value: @profile&.dig("addressLine2") %>
      <div class="help-text">Optional</div>
    </div>

    <div class="form-group-row">
      <div class="form-group-half">
        <%= form.label :addressCity, "City" %>
        <%= form.text_field :addressCity, value: @profile&.dig("addressCity") %>
      </div>
      <div class="form-group-half">
        <%= form.label :addressState, "State" %>
        <%= form.text_field :addressState, value: @profile&.dig("addressState") %>
      </div>
    </div>

    <div class="form-group-row">
      <div class="form-group-half">
        <%= form.label :addressZipCode, "ZIP Code" %>
        <%= form.text_field :addressZipCode, value: @profile&.dig("addressZipCode") %>
      </div>
      <div class="form-group-half">
        <%= form.label :addressCountry, "Country" %>
        <%= form.text_field :addressCountry, value: @profile&.dig("addressCountry") %>
      </div>
    </div>
  </div>

  <div class="form-actions">
    <%= form.submit "Update Profile", class: "btn" %>
    <%= link_to "Cancel", root_path, class: "btn btn-secondary" %>
  </div>
<% end %>

<div class="footer">
  <%= link_to "Mass unsubscribe +alt emails", alts_path %>
</div>

<%= render "shared/authenticated_footer" %>
</div>
